---
import Footer from "../components/Footer.astro";
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav.astro";
interface Props {
	title?: string | undefined;
	desc?: string | undefined;
}

const { title, desc } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<MainHead title={title} desc={desc} />
	</head>
	<body>
		<Nav />
		<slot />
		<Footer />
		<style is:global>
			h1 {
				@apply text-5xl;
			}
			h2 {
				@apply text-4xl;
			}
			h3 {
				@apply text-3xl;
			}
			h4 {
				@apply text-2xl;
			}
			h5 {
				@apply text-xl;
			}
			h6 {
				@apply text-lg;
			}
			.wrapper {
				width: 100%;
				max-width: 83rem;
				margin-inline: auto;
				padding-inline: 1.5rem;
			}
		</style>
	</body>
</html>
