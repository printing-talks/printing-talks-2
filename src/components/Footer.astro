---
import Icon from "./Icon.astro";
import type { iconPaths } from "./IconPaths";

/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  {
    label: "Instagram",
    href: "https://www.instagram.com/printingtalks.ae/",
    icon: "instagram-logo",
  },
];
---

<footer
  class="relative w-full max-w-[83rem] mx-auto grid grid-cols-3 py-8 px-6 overflow-clip"
>
  <div class="flex flex-col justify-between items-start gap-4 overflow-clip">
    <a href="/" class="site-title">
      <Icon icon="logo" size="3em" />
    </a>
    <p>Printing Talks</p>
  </div>
  <div class="flex items-center justify-center gap-4">
    {
      iconLinks.map(({ href, icon, label }) => (
        <a href={href} class="social">
          <span class="sr-only">{label}</span>
          <Icon size="2.25em" icon={icon} />
        </a>
      ))
    }
  </div>
  <div class="flex flex-col items-end gap-4 text-right overflow-clip">
    <div class="flex gap-4">
      <a type="button" href="/iso-9001.pdf">
        <img
          class="w-12 h-12"
          src="/assets/otabu-cert-logo.png"
          alt="Otabu Certification Private Limited Logo"
          title="ISO 9001:2015 Certificate (PDF)"
        />
        <span class="absolute invisible">ISO 9001:2015 Certificate (PDF)</span>
      </a>
      <a type="button" href="/iso-14001.pdf">
        <img
          class="w-12 h-12"
          src="/assets/otabu-cert-logo.png"
          alt="Otabu Certification Private Limited Logo"
          title="ISO 14001:2015 Certificate (PDF)"
        />
        <span class="absolute invisible">ISO 14001:2015 Certificate (PDF)</span>
      </a>
      <a type="button" href="/iso-45001.pdf">
        <img
          class="w-12 h-12"
          src="/assets/otabu-cert-logo.png"
          alt="Otabu Certification Private Limited Logo"
          title="ISO 45001:2018 Certificate (PDF)"
        />
        <span class="absolute invisible">ISO 45001:2018 Certificate (PDF)</span>
      </a>
      <a type="button" href="/gmp-cert.pdf">
        <img
          class="w-12 h-12"
          src="/assets/gmp-logo.png"
          alt="Goods Manufacturing Practice Standards Logo"
          title="Goods Manufacturing Practice Certificate (PDF)"
        />
        <span class="absolute invisible"
          >Goods Manufacturing Practice Certificate (PDF)</span
        >
      </a>
    </div>
    <p class="text-xs">Copyright Printing Talks 2024</p>
  </div>
</footer>
