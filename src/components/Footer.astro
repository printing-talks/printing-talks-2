---
import Icon from "./Icon.astro";
import type { iconPaths } from "./IconPaths";

/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  {
    label: "Instagram",
    href: "https://www.instagram.com/printingtalks.ae/",
    icon: "instagram-logo",
  },
];
---

<footer
  class="flex justify-between items-center p-5 md:py-10 md:px-20 bg-base-200 text-base-content mx-auto w-[100%] mt-16"
>
  <aside>
    <a href="/" class="site-title">
      <Icon icon="logo" size="3em" />
       Printing Talks
    </a>
    <div class="flex">
      {
        iconLinks.map(({ href, icon, label }) => (
          <a href={href} class="social">
            <span class="sr-only">{label}</span>
            <Icon size="2em" icon={icon} />
          </a>
        ))
      }
    </div>
  </aside>

  <div class="flex flex-col gap-2 justify-end items-end">
    <a href="/gmp-cert.pdf">
      <img
        class="w-12 h-12"
        src="/assets/gmp-logo.png"
        alt="Goods Manufacturing Practice Standards Logo"
      />
    </a>

    <p class="text-xs">Copyright Printing Talks 2023</p>
  </div>
</footer>
