---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a class="flex bg-accent text-white place-content-center py-3 px-4" href={href}
  ><slot /></a
>

<style>
  a {
    position: relative;
    text-align: center;
    gap: 0.8em;
    text-decoration: none;
    line-height: 1.1;
    border-radius: 999rem;
    overflow: hidden;
    white-space: nowrap;
  }
</style>
