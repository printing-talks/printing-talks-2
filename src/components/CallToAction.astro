---
interface Props {
  href: string;
  label: string;
  className?: string | undefined;
}

const { href, className, label } = Astro.props;
---

<a aria-label={label} class={`btn btn-accent ${className}`} href={href}
  ><slot /></a
>

<style>
  a {
    position: relative;
    text-align: center;
    gap: 0.8em;
    text-decoration: none;
    line-height: 1.1;
    overflow: hidden;
    white-space: nowrap;
  }

