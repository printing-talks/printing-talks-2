---
interface Props {
  title: string;
  tagline?: string;
}

const { tagline, title } = Astro.props;
---

<div class="wrapper justify-center">
  <div class="hero-text flex flex-col">
    <h1 class="text-accent">{title}</h1>
    {tagline && <p class="text-xl">{tagline}</p>}
  </div>
  <slot />
</div>

<style></style>
