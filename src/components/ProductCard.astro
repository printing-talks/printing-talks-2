---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  product: CollectionEntry<"products">;
}

const { data, slug } = Astro.props.product;
---

<a
  href={`/products/${slug}`}
  class="card overflow-clip shadow-lg hover:shadow-2xl transition duration-300 rounded-xl bg-base-dark flex flex-col h-[16rem] md:h-[22rem]"
>
  <div class="max-h-[60%]">
    <Image
      src={data.img}
      alt={data.img_alt || ""}
      width="200"
      height="200"
      loading="eager"
      decoding="async"
    />
  </div>
  <div
    class="min-h-[40%] flex flex-col justify-center bg-base px-3 md:px-8 py-2 md:py-4"
  >
    <p class="text-lg font-bold">{data.title}</p>
    <p class="line-clamp-1 sm:line-clamp-2">{data.description}</p>
  </div>
</a>

<style>
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
