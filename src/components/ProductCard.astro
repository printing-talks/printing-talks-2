---
import type { CollectionEntry } from "astro:content";

interface Props {
  product: CollectionEntry<"products">;
}

const { data, slug } = Astro.props.product;
---

<a
  href={`/products/${slug}`}
  class="card overflow-clip shadow-lg hover:shadow-2xl transition duration-300 rounded-xl bg-base-dark flex flex-col h-[16rem] md:h-[22rem]"
>
  <img
    class="image-scale"
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
  />
  <div class="flex flex-col justify-center bg-base px-8 py-4">
    <h6 class="font-bold">{data.title}</h6>
    <p class="line-clamp-2">{data.description}</p>
  </div>
</a>

<style>
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
